@import '~common/css/common_const.styl'

$button-basic()
    display inline-block
    padding 7px 14px
    color #FFF
    text-align center
    white-space nowrap
    vertical-align middle
    outline none
    cursor pointer
    border 1px solid transparent
    border-radius 4px
    box-shadow inset 0 1px 0 hsla(0,0%,100%,.15), 0 1px 1px rgba(0,0,0,.075)
    &:active
        box-shadow inset 0 3px 6px rgba(0,0,0,.225)

.primary
    $button-basic()
    background-color #0275D8
    border-color #0275D8

.success
    $button-basic()
    background-color #5CB85C
    border-color #5CB85C

.warning
    $button-basic()
    background-color #F0AD4E
    border-color #F0AD4E

.error
    $button-basic()
    background-color #D9534F
    border-color #D9534F

.info
    $button-basic()
    background-color #5BC0DE
    border-color #5BC0DE

.normal
    $button-basic()
    background-color #FFF
    border-color #CCC
    color #373A3C

.default
    $button-basic()
    background-color $WidgetBaseColor
    border-color $WidgetBaseColor
